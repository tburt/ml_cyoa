<ol reversed class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <div>
      <a href="{{ post.url | url }}" class="postlist-link animated-rainbow-hover">{% if post.data.title or post.data.game %}{{ post.data.title or post.data.game.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    </div>
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag animated-rainbow-hover">{{ tag }}</a>
    {% endfor %}
    <div>
      {{ post.data.description or post.data.game.description | safe }}
    </div>
  </li>
{% endfor %}
</ol>
